@page "/learnBlazor/parentComponent"

<h3>Parent Child Relation</h3>

<CascadingValue Value="@MessageForGrandChild" Name="message">
    <CascadingValue Value="@LuckNumber" Name="luckyNumber">

        @*invoke*@
        <_ChildComponent @ref="childComp" OnButtonClick="ShowMessage" Title="This is passed as parameter from Parent Component">
            <ChildContent>Render Fragment From Parent! WooHoo!</ChildContent>
        </_ChildComponent>
    </CascadingValue>
</CascadingValue>


<p><b>@messageText</b></p>
@*invoke _AnotherChildComponent*@
<_AnotherChildComponent placeholder="Placeholder from parent"></_AnotherChildComponent>

<div class="row">
    <button class="btn btn-success" @onclick="()=>childComp.ToastrSuccess()">Show SweetAlert</button> @*inline function on childComp*@
</div>

@*<_ChildComponent Title="This is second child component">*@
@*</_ChildComponent>*@

@code {
    @*object of child component*@
    private _ChildComponent childComp;

    public string MessageForGrandChild = "This message is from your grand parent (ParentComponent)";
    public string LuckNumber = "7";
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Tangy button clicked from Child Component";
    }
}

